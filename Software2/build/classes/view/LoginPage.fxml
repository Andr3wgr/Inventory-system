<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginPageController">
    <children>
        <BorderPane prefHeight="412.0" prefWidth="621.0">
            <top>
                <Label fx:id="titleLb" alignment="CENTER" text="Title" BorderPane.alignment="BOTTOM_LEFT">
                    <padding>
                        <Insets left="50.0" top="30.0" />
                    </padding>
                    <font>
                        <Font size="26.0" />
                    </font>
                </Label>
            </top>
            <center>
                <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <children>
                        <VBox prefHeight="344.0" prefWidth="410.0">
                            <children>
                                <Label fx:id="usernameLb" prefHeight="30.0" prefWidth="168.0" text="Label">
                                    <font>
                                        <Font size="20.0" />
                                    </font>
                           <VBox.margin>
                              <Insets left="-30.0" />
                           </VBox.margin>
                                </Label>
                                <Label fx:id="passwordLb" text="Label">
                                    <font>
                                        <Font size="20.0" />
                                    </font>
                                    <padding>
                                        <Insets top="20.0" />
                                    </padding>
                           <VBox.margin>
                              <Insets left="-30.0" />
                           </VBox.margin>
                                </Label>
                            </children>
                            <padding>
                                <Insets left="175.0" top="70.0" />
                            </padding>
                        </VBox>
                        <VBox prefHeight="344.0" prefWidth="410.0" spacing="30.0">
                            <children>
                                <TextField fx:id="usernameTxt" />
                                <PasswordField fx:id="passwordTxt" />
                                <Button mnemonicParsing="false" onAction="#login" prefHeight="25.0" prefWidth="84.0">
                                    <VBox.margin>
                                        <Insets left="85.0" />
                                    </VBox.margin>
                           <graphic>
                              <Label fx:id="loginBt" text="Label" />
                           </graphic>
                                </Button>
                            </children>
                            <padding>
                                <Insets right="150.0" top="70.0" />
                            </padding>
                        </VBox>
                    </children>
                </HBox>
            </center>
            <bottom>
                <Label fx:id="locationLb" prefHeight="17.0" prefWidth="115.0" text="Location" BorderPane.alignment="BOTTOM_RIGHT">
                    <BorderPane.margin>
                        <Insets bottom="15.0" right="15.0" />
                    </BorderPane.margin>
                </Label>
            </bottom>
        </BorderPane>
    </children>
</AnchorPane>
